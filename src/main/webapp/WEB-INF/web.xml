<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
    <!---->
    <!---->
    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>controller.SecurityFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <url-pattern>/welcome</url-pattern>
    </filter-mapping>
    <!---->
    <!---->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <!---->
    <servlet>
        <servlet-name>LoginTemplate</servlet-name>
        <jsp-file>/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginTemplate</servlet-name>
        <url-pattern>/login.jsp</url-pattern>
    </servlet-mapping>
    <!---->
    <!---->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controller.LogoutServlet</servlet-class>
    </servlet>
    <!---->
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <!---->
    <!---->
    <servlet>
        <servlet-name>PrintAllServlet</servlet-name>
        <servlet-class>controller.PrintAllServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PrintAllServlet</servlet-name>
        <url-pattern>/printall</url-pattern>
    </servlet-mapping>
    <!---->
    <servlet>
        <servlet-name>PrintAllTemplate</servlet-name>
        <jsp-file>/printall.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>PrintAllTemplate</servlet-name>
        <url-pattern>/printall.jsp</url-pattern>
    </servlet-mapping>
    <!---->
    <!---->
    <servlet>
        <servlet-name>WelcomeServlet</servlet-name>
        <servlet-class>controller.WelcomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WelcomeServlet</servlet-name>
        <url-pattern>/welcome</url-pattern>
    </servlet-mapping>
    <!---->
    <servlet>
        <servlet-name>WelcomeTemplate</servlet-name>
        <jsp-file>/welcome.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>WelcomeTemplate</servlet-name>
        <url-pattern>/welcome.jsp</url-pattern>
    </servlet-mapping>
    <!---->
    <!---->
    <servlet>
        <servlet-name>InsertWorker</servlet-name>
        <servlet-class>controller.InsertServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InsertWorker</servlet-name>
        <url-pattern>/insert</url-pattern>
    </servlet-mapping>
    <!---->
    <servlet>
        <servlet-name>InsertTemplate</servlet-name>
        <jsp-file>/insert.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>InsertTemplate</servlet-name>
        <url-pattern>/insert.jsp</url-pattern>
    </servlet-mapping>
    <!---->
    <!---->
    <servlet>
        <servlet-name>UpdateWorker</servlet-name>
        <servlet-class>controller.UpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateWorker</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
    <!---->
    <servlet>
        <servlet-name>UpdateTemplate</servlet-name>
        <jsp-file>/update.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateTemplate</servlet-name>
        <url-pattern>/update.jsp</url-pattern>
    </servlet-mapping>
    <!---->
    <!---->
    <servlet>
        <servlet-name>DeleteWorker</servlet-name>
        <servlet-class>controller.DeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteWorker</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
</web-app>